# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Required)
# PostgreSQL connection string
# For Neon/Postgres: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/expense_tracker

# Application URL (Required for Telegram/WhatsApp webhooks)
# Your public domain or IP where the app is hosted
# Example: https://yourdomain.com or https://your-vps-ip.com
APP_URL=https://yourdomain.com

# AI API Keys (Optional - can be configured in app settings)
# Google Gemini AI - for AI-powered expense categorization
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI - for AI-powered features
OPENAI_API_KEY=your_openai_api_key_here

# WhatsApp Configuration (Optional)
# API version for WhatsApp Business API (defaults to v21.0)
WHATSAPP_API_VERSION=v21.0

# Note: Telegram and WhatsApp bot tokens are configured via the web interface
# under Settings, not through environment variables
